<div class="center hero-unit">
  <h1>Maintain Items to Break</h1>

  <h2>
    This is a list of case items that are currently being sold as pieces.
  </h2>
  <table>
  <tr>
  <% @data[0].each_key do |col| %>
    <td><%= col %></td>
    <% end %>
    <td>&nbsp;</td>
  </tr>
  <% @data.each do |hsh| %>
    <tr>
    <% hsh.each_value do |val| %>
      <td><%= val %></td>
      <td><form action=<%= "'/weight-to-case/#{val}'" %> method="delete"><input type="submit" value="Delete" /></form></td>
      <% end %>
    </tr>
  <% end %>
  </table>
    
</div>
