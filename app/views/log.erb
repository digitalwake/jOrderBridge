<div class="center hero-unit">
  <h1><%= @log_type.capitalize %></h1>

  <h2>
    This is a list of <%= @log_type %> for the given order date. 
  </h2>
  <table>
  <tr>
  <% @data[0].each_key do |col| %>
    <td><%= col %></td>
    <% end %>
    <td>&nbsp</td>
  </tr>
  <% @data.each do |hsh| %>
    <tr>
    <% hsh.each_value do |val| %>
      <td><%= val %></td>
      <% end %>
      <td><form action="<%= log_details_url %>" method="get">
          <input type="hidden" name="log_type" value= '<%= @log_type %>' />
          <input type="hidden" name="order_type" value= '<%= @order_type %>' />
          <input type="hidden" name="order_date" value= <%= hsh['Date'] %> />
          <input type="hidden" name="item" value= '<%= hsh['cust_item'] %>' />
          <input type="submit" value="Details" class= "btn btn-small btn-primary"/>
          </form>
      </td>
    </tr>
  <% end %>
  </table>
  
  <p><%= link_to logs_url, "<-New Search" %></p>
    
</div>
